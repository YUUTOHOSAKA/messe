<div class="form-horizontal" role="form">
<%= form_for(@messege) do |f| %>
  <% if @messege.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @messege.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-1 control-label">名前：</label>
    <div class="col-sm-11"><%= f.text_field :name, :class => "form-control"%></div>
  </div>
  
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-1 control-label">投稿：</label>
    <div class="col-sm-11"><%= f.text_area :body, :class => "form-control"%></div>
  </div>
  
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-1 control-label">年齢：</label>
    <div class="col-sm-11"><%= f.text_field :age, :class => "form-control"%></div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-1 control-label"><%= f.submit '送信' , class:"btn btn-sm btn-primary" %></label>
  </div>
<% end %>
</div>