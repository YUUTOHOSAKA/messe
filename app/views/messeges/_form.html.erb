<div class="form-horizontal" role="form">
<%= form_for(@messege) do |f| %>
  <% if @messege.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @messege.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">名前：<%= f.text_field :name, :class => "form-control"%></div>
  
  <div class="form-group">投稿：<%= f.text_area :body, :class => "form-control"%></div>
  
  <div class="form-group">年齢：<%= f.text_field :age, :class => "form-control"%></div>
  
  <div class="form-group"><%= f.submit '送信' , class:"btn btn-sm btn-primary" %></div>
<% end %>
</div>