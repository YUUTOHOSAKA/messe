<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messeges.each do |messege| %>
      <span class="label label-info"><%= messege.name %></span>
      <%= messege.body %>
      <br>
    <% end %>
  </div>
</div>


<div class="panel panel-success">
  <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
      <% @messeges.each do |messege| %>
        <span class="label label-info"><%= messege.name %></span>
        <%= messege.body %>
        <br>
    <% end %>
    </div>
</div>

<%= form_for(Messege.new) do |f| %>
  名前：<%= f.text_field :name %>
  投稿：<%= f.text_area :body %>
  <%= f.submit '送信' , class:"btn btn-sm btn-primary" %>
<% end %>