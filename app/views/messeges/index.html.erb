<div class="panel panel-success">
  <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
      <% @messeges.each do |messege| %>
        <span class="label label-primary"><%= messege.name %></span>
          
      <%= messege.age %>歳
        <div class="panel panel-default">
           <div class="panel-heading">
             投稿内容
           </div>
    
           <div class="panel-body">
             <%= messege.body %>
             <span class="label label-info"><%= link_to "編集" , edit_messege_path(messege) %></span>
             <span class="label label-danger"><%= link_to "削除" , messege , method: :delete, data: {confirm: '削除してもよろしいですか？'} %></span>
           </div>
        </div>
      <br>
      <% end %>
    </div>
</div>

<% #以下から入力フォーム %>
<%= render 'form' %>

